<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.gdmec.android.boxuegu.activity.FindPswActivity">
  <include layout="@layout/main_title_bar"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_user_name"
        android:layout_marginRight="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="35dp"
        android:text="您的用户名是？"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:hint="请输入您的用户名"
        android:singleLine="true"
        android:paddingLeft="8dp"
        android:textColor="#000000"
        android:textColorHint="#A3A3A3"
        android:visibility="gone"
        android:background="@drawable/find_psw_icon"
        android:id="@+id/et_user_name"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"

        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:text="您的姓名是？"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:hint="请输入要验证的姓名"
        android:singleLine="true"
        android:paddingLeft="8dp"
        android:textColor="#000000"
        android:textColorHint="#A3A3A3"
        android:background="@drawable/find_psw_icon"
        android:id="@+id/et_validate_name"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"

        />
     <TextView
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:id="@+id/tv_reset_psw"
         android:text="123456"
         android:textSize="15sp"
         android:textColor="@android:color/white"
         android:layout_marginLeft="35dp"
         android:layout_marginTop="10dp"
         android:layout_marginRight="35dp"
         android:visibility="gone"
         android:gravity="center_vertical"
         
         />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/register_selected"
        android:text="验证"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:id="@+id/btn_validate"
        android:layout_gravity="center_vertical"
        />
</LinearLayout>